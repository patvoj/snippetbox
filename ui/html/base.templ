package layout

templ Base(title string, main templ.Component) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="utf-8"/>
			<title>{ title } - Snippetbox</title>
		</head>
		<body>
			<header>
				<h1><a href="/">Snippetbox</a></h1>
			</header>
			<main>
				@main
			</main>
			<footer>Powered by <a href="https://golang.org/">Go</a></footer>
		</body>
	</html>
}
